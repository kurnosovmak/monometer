{
  "name": "kurnosovmak/monometer",
  "description": "Sends your metrics to various databases and web services.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Monometer\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Alexander Kurnosov",
      "email": "kurnosovmak@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "vkcom/statshouse": "^1.0"
  },
  "scripts": {
